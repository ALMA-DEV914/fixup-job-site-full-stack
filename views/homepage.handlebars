{{!-- Image for homepage template --}}
  <section class="hero ">
    <div class="hero-body">
      <div class="container">
        <div class="columns">
          <div class="column is-8 is-offset-2">
            <figure class="image is-12by8">
              <img src="../images/hero.jpg" alt="group photo">
            </figure>
          </div>
        </div>
        {{!--A welcome title for the page--}}
        <section class="section">
          <div class="columns">
            <div class="column is-8 is-offset-2">
              <div class="content is-medium has-text-centered">
                <h1>WELCOME TO OUR JOB HUNT</h1>
              </div>
            </div>
          </div>
        </section>
        <div class="is-divider"></div>
      </div>
    </div>
  </section>
{{!-- section of buttons links jobs data categories --}}
  <div class="categories">
  <div class="columns is-flex has-text-centered">
  <div class="column"><a href="/jobs">All Jobs</a></div>
  {{!--group each category that belongs to each other--}}
{{#each categories}}
<div class="column"><a href="/category/{{id}}/jobs">{{category_name}}</a></div>
{{/each}}
</div>
</div>
       
