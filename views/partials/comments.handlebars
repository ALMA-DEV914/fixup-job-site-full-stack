{{!initiate page template for the comments section}}

<div class="columns">
  <div class="column">
    <section class="contrast-panel px-2 py-2" id="{{id}}">
      <div class="media">
        <div class="media-left">
          <figure class="image">
            <img src="/avatar/{{user.id}}" alt="avatar image">
          </figure>
        </div>
        <div class="media-content">
          <p>
            <a href="/dashboard/user/{{user.id}}">
              <strong class="has-text-white">{{user.username}}</strong>
            </a>
            <br>
            <small>{{format_date created_at}}</small>
          </p>
        </div>
      </div>
      <div>
        {{#if isEditable}}
        <div class="field">
          <div class="control">
            <textarea
            class="textarea has-text-dark"
            name="comment-body-{{id}}"
          >{{comment_text}}</textarea>
          </div>
        </div>
        <div>
          <div class="field">
            <div class="control">
              <button class="button is-small is-primary edit-comment-btn" data-id="{{id}}">Update</button>
              <button class="button is-small is-primary delete-comment-btn" data-id="{{id}}">Delete</button>
            </div>
          </div>
        </div>
        {{else}}
          <div class="is-italic">
            {{comment_text}}
          </div>
        {{/if}}
      </div>
    </section>
  </div>
</div>
