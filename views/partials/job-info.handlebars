<div class="card">
    <div class="card-header">
      <p class="card-header-title is-centered"><a href="/dashboard/job/{{id}}">{{title}}</a></p>
    </div>
    
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-40x40">
            <img src="/avatar/{{owner.id}}" alt="avatar image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title"><a href="/dashboard/user/{{owner.id}}">{{owner.username}}</a></p>
          <p class="subtitle">{{owner.email}}</p>
        </div>
      </div>
      <div class="content">
        <p>
          <b>Payment offered:</b> ${{salary}}<br>
          <b>Payment by:</b> {{payment_method}}<br>
          <b>Job Status:</b> {{job_status}}<br>
          <b>Zip Code:</b> {{zip_code}}<br>
          <p>{{description}}</p>
      </div>
    </div>
    <div class="card-image">
      <figure class="image is-4by4">
      {{#if jobimages}}
      {{#each jobimages as |image|}}   
        <img src="{{image.image_url}}">
      {{/each}}
      {{else}}
        <img src="/images/android-chrome-512x512.png">
      {{/if}}
      </figure>
    </div>
    <footer class="card-footer">
      <button type="card-footer-item button" id="thumbsup">
        <span class="glyphicon glyphicon-thumbs-up"></span>
        Like
      </button>
      <button
        class="card-footer-item button is-primary apply-to-job-btn"
        data-id={{id}}
      >Apply!</button>
  </footer>
</div>
