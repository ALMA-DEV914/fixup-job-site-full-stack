<div class="container px-3 py-2 has-background-light">
  <div class="title">
    {{job.title}} applicants
  </div>
  <div class="columns is-multiline">
    {{#each job.applicant as |applicant|}}
    <div class="column is-3 mx-3 has-text-centered applicant">
      <div>Name:
        <a href="/dashboard/user/{{applicant.id}}">
          {{applicant.username}}</a>
      </div>
      <div>Email:<a
          href="mailto: {{applicant.email}}"
        >{{applicant.email}}</a>
      </div>
      {{!-- <div>Rating:{{applicant.userAverage}}</div><br/> --}}
      <div class="useraverage" data-useraverage="{{applicant.userAverage}}">Rating:
        <span class="stars"></span>
      </div>
      <div>
        <button
          class="select-applicant-btn button is-primary"
          data-job="{{applicant.Job_Applicant.jobId}}"
          data-applicant="{{applicant.id}}"
        >Select Applicant</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>


{{!--file path of function to generate this page--}}
<script src="/javascript/applicant.js"></script>
